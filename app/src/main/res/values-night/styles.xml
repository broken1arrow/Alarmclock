<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <!-- Customize the appearance of the menu items -->
        <item name="android:textAppearance">@style/MenuItemTextStyle</item>
        <!-- Customize the item divider line (optional)
        <item name="android:itemBackground">@drawable/popup_item_background</item> -->

        <!-- Customize the behavior of the menu -->
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownHorizontalOffset">-50dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="MenuItemTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="colorControlActivated">@color/button_color_state_night</item>
        <item name="colorControlNormal">@color/button_color_state_night</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="backgroundTint">@color/button_color_state_night</item>
        <item name="colorControlHighlight">@color/md_theme_light_shadow</item>
        <item name="android:elevation">1000dp</item>
    </style>

    <style name="background_button_for_day" parent="Widget.Material3.Button">
        <item name="android:background">@color/background</item>
    </style>

    <style name="background_item_alarm">
        <item name="android:background">@drawable/background_round_corners</item>
        <item name="android:backgroundTint">@color/background</item>
    </style>

    <style name="background_table" parent="Widget.Material3.TabLayout">
        <item name="background">@color/background</item>
        <item name="android:background">@color/background</item>
        <item name="android:backgroundTint">@color/background</item>
    </style>

    <style name="switch_item_alarm" parent="android:Widget.Material.CompoundButton.Switch">

        <item name="android:backgroundTint">@color/background</item>
        <item name="android:thumb">@drawable/custom_switch_thumb</item>
        <item name="android:track">@drawable/custom_switch_track</item>
        <item name="android:thumbTint">@color/switch_track_thumb_color_state</item>
        <item name="android:trackTint">@color/switch_track_color_state</item>
        <item name="android:text">" "</item>
    </style>

    <style name="toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/toolbar_background</item>
    </style>

    <style name="navigation_bottom" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/navigation_bottom_ActiveIndicator</item>
    </style>

    <style name="navigation_bottom_ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/button_base_default</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:tint">@color/cardview_dark_background</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="calendar_alarm_date" parent="@android:style/Widget.Material.Light.CalendarView">>
        <item name="android:selectedWeekBackgroundColor">#FFFFFF</item>
        <item name="android:focusedMonthDateColor">@color/cardview_dark_background</item>
        <item name="android:weekNumberColor">@color/cardview_dark_background</item>


        <item name="android:weekDayTextAppearance">@style/WeekdayTextAppearance</item>
        <item name="android:dateTextAppearance">@style/DateTextAppearance</item>
        <item name="android:firstDayOfWeek">2</item>
    </style>

    <style name="WeekdayTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#CD711E80</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DateTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>